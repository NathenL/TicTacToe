<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_game_board"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.nathen.tictactoe.GameBoard"
    tools:showIn="@layout/activity_game_board">

    <Button
        android:text="T"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:id="@+id/button1_1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        style="@style/Widget.AppCompat.Button.Colored"
        android:textSize="40sp"
        android:textColor="@color/colorPrimary"
        android:onClick="onClick"/>

    <Button
        android:text="I"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:id="@+id/button1_2"
        style="@style/Widget.AppCompat.Button.Colored"
        android:textSize="40sp"
        android:textColor="@color/colorPrimary"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/button1_1"
        android:layout_marginStart="12dp"
        android:onClick="onClick"/>

    <Button
        android:text="C"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:id="@+id/button1_3"
        style="@style/Widget.AppCompat.Button.Colored"
        android:textSize="40sp"
        android:textColor="@color/colorPrimary"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/button1_2"
        android:layout_marginStart="14dp"
        android:onClick="onClick"/>


    <Button
        android:text="T"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:id="@+id/button2_1"
        style="@style/Widget.AppCompat.Button.Colored"
        android:textSize="40sp"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/button1_1"
        android:layout_alignParentStart="true"
        android:onClick="onClick"/>

    <Button
        android:text="A"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:id="@+id/button2_2"
        style="@style/Widget.AppCompat.Button.Colored"
        android:textSize="40sp"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/button1_2"
        android:layout_alignStart="@+id/button1_2"
        android:onClick="onClick"/>

    <Button
        android:text="C"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:id="@+id/button2_3"
        style="@style/Widget.AppCompat.Button.Colored"
        android:textSize="40sp"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/button1_3"
        android:layout_alignStart="@+id/button1_3"
        android:onClick="onClick"/>

    <Button
        android:text="T"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:id="@+id/button3_1"
        style="@style/Widget.AppCompat.Button.Colored"
        android:textSize="40sp"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/button2_1"
        android:layout_alignParentStart="true"
        android:onClick="onClick"/>

    <Button
        android:text="O"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:id="@+id/button3_2"
        style="@style/Widget.AppCompat.Button.Colored"
        android:textSize="40sp"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/button2_2"
        android:layout_alignStart="@+id/button1_2"
        android:onClick="onClick"/>

    <Button
        android:text="E"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:id="@+id/button3_3"
        style="@style/Widget.AppCompat.Button.Colored"
        android:textSize="40sp"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/button2_3"
        android:layout_alignStart="@+id/button2_3"
        android:onClick="onClick"/>

    <TextView
        android:text="Press (+) for new game"
        android:layout_width="350dp"
        android:layout_height="220dp"
        android:id="@+id/whosTurn"
        android:textSize="60sp"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />



</RelativeLayout>
